<?xml version="1.0" encoding="UTF-8"?>
<Configuration strict="true" name="Default">
  <Appenders>
    <Appender type="Console" name="STDOUT">
      <Layout type="PatternLayout" pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c{1}:%L - %m%n"/>
    </Appender>

    <Appender type="RollingFile" name="FILE" fileName="logs/${name}.log">
      <Layout type="PatternLayout" pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c{1}:%L - %m%n"/>
      <Policies>
        <TimeBasedTriggeringPolicy /><!-- Rotated everyday -->
        <SizeBasedTriggeringPolicy size="100 MB"/> <!-- Or every 100 MB -->
      </Policies>
    </Appender>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="STDOUT"/>
    </Root>
    <Logger name="ch.pontius.kiar" level="debug" additivity="false">
      <AppenderRef ref="STDOUT"/>
      <AppenderRef ref="FILE"/>
    </Logger>
  </Loggers>
</Configuration>